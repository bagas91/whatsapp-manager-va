{
  "name": "whatsapp-manager-app",
  "version": "1.0.0",
  "description": "App desktop para gerenciamento de grupos WhatsApp com envio de m√≠dias e agendamento",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "app": "electron .",
    "build": "pnpm install --frozen-lockfile && pnpx puppeteer browsers install chrome"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "puppeteer": "^23.10.0",
    "qrcode": "^1.5.3",
    "whatsapp-web.js": "^1.26.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.seuapp.whatsappmanager",
    "productName": "Gerenciador WhatsApp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "server.js",
      "mockSender.js",
      "whatsappSender.js",
      "public/**/*",
      "app/**/*",
      ".env",
      "uploads/**/*"
    ],
    "extraResources": [
      {
        "from": "uploads",
        "to": "uploads"
      }
    ]
  }
}